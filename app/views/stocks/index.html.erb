
<p id="notice"><%= notice %></p>

<h1>Listing Stocks</h1>
<table>
    <tr>
        <th><h3><%= link_to 'New Item', new_stock_path %></h3></th>
        <th><h3><%= link_to 'Report', report_stocks_path %></h3></th>
    </tr>
</table>

<hr>

<%= form_for :@stocks , as: :get , url:correct_stocks_path  do |stocky_form| %>

<table>
  <thead>
    <tr>
      <th>Item name</th>
      <th>Unit of measure</th>
      <th>Batch number</th>
      <th>Quantity</th>
      <th>Expiry date</th>
      <th>Actual Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.item_name %></td>
        <td><%= stock.unit_of_measure %></td>
        <td><%= stock.batch_number %></td>
        <td><%= stock.quantity %></td>
        <td><%= stock.expiry_date %></td>
        <td>
            <%= stocky_form.fields_for stock,index: stock.id do |id_form| %>
               <%= id_form.number_field :item_name %>
             <% end %>

        </td>
        <td><%= link_to 'Show', stock %></td>
     <!--   <td><%= link_to 'Edit', edit_stock_path(stock) %></td> -->
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
  <% end %>
</table>
<%= submit_tag("Update") %>
  <% end %>

<br>
