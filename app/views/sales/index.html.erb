<p id="notice"><%= notice %></p>
<h1>Listing Sales</h1>
<%= link_to 'New Sale', new_sale_path %>

<hr>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Item name</th>
      <th>Quantity</th>
      <th>Unit of measure</th>
      <th>Batch number</th>
      <th>Expiry date</th>
      <th>Date of purchase</th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.customer %></td>
        <td><%= sale.item_name %></td>
        <td><%= sale.quantity %></td>
        <td><%= sale.unit_of_measure %></td>
        <td><%= sale.batch_number %></td>
        <td><%= sale.expiry_date %></td>
        <td><%= sale.date_of_purchase %></td>
        <td><%= sale.total_price %></td>
        <td><%= link_to 'Show', sale %></td>
      </tr>
    <% end %>
  </tbody>
</table>
