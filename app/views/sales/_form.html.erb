<%= form_for(@sale) do |f| %>
  <% if @sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% @sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :customer %><br>
    <input name="sale[customer]" id="tags" type="text" onkeyup="getcustomer()" ,limit = '2'>
  </div>
  <div class="field">
    <%= f.label :item_name %><br>
    <input name="sale[item_name]" id="items" type="text" onkeyup="getitem()" ,limit = '2'>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity %>
  </div>

  <div class="field">
    <%= f.label :unit_of_measure %><br>
    <input name="sale[unit_of_measure]" id="uom" type="text" onkeyup="getuom()" ,limit = '2'>
  </div>

  <div class="field">
    <%= f.label :batch_number %><br>
    <input name="sale[batch_number]" id="batch" type="text" onkeyup="getbatch()" ,limit = '2'>
  </div>
  <div class="field">
    <%= f.label :expiry_date %><br>
    <%= f.date_select :expiry_date %>
  </div>
  <div class="field">
    <%= f.label :date_of_purchase %><br>
    <%= f.date_select :date_of_purchase %>
  </div>
  <div class="field">
    <%= f.label :total_price %><br>
    <%= f.text_field :total_price %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>

function getcustomer() {
  $.get("<%= url_for(controller: 'sales', action: 'customer' , ) %>", function(data, status){
      $( "#tags" ).autocomplete({
        source: data
      });
  });
};

function getitem() {
  $.get("<%= url_for(controller: 'sales', action: 'item') %>", function(data, status){
      $( "#items" ).autocomplete({
        source: data
      });
  });
};

function getuom() {
    item = document.getElementById("items").value
    $.get("<%= url_for(controller: 'purchases', action: 'uom' ,name:"") %>"+item , function(data, status){
          console.log(data);
        $( "#uom" ).autocomplete({
          source: data
        });
    });
};

function getbatch() {
    item = document.getElementById("items").value
    $.get("<%= url_for(controller: 'stocks', action: 'batch' ,name:"") %>"+item , function(data, status){
          console.log(data);
        $( "#batch" ).autocomplete({
          source: data
        });
    });
};
</script>
